{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "types": ["vitest", "node"]
  },
  "include": [
    "vitest.config.ts",
    "vitest.setup.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
